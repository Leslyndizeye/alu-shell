#!/usr/bin/env bash
# This script displays the PID and full process name of the "bash" process.

# Use pgrep to find the PID of the "bash" process
bash_pid=$(pgrep bash)

# Iterate through the PIDs and display the full process name
for pid in $bash_pid
do
  process_name=$(ps -p $pid -o comm=)
  echo "For PID: $pid, Full Process Name: $process_name"
done
